# Production Environment Variables
# Copy to .env.prod and fill in your values

# Environment
NODE_ENV=production

# Server
PORT=3000
HOST=0.0.0.0

# Database (use strong credentials)
DATABASE_URL=postgresql://user:strong_password@db-host:5432/neighbornet

# JWT (generate strong secrets)
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-chars
JWT_EXPIRY=15m
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-at-least-32-chars
JWT_REFRESH_EXPIRY=7d

# CORS (set to your domain)
CORS_ORIGIN=https://app.neighbornet.com

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_MAX=50
RATE_LIMIT_TIME_WINDOW=900000

# Geolocation
NEARBY_RADIUS_KM=10

# SpeedTest
MAX_SPEEDTEST_SAMPLES=1000

# PostgreSQL
POSTGRES_USER=neighbornet
POSTGRES_PASSWORD=your_strong_postgres_password
