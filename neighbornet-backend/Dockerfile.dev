FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy prisma schema
COPY prisma ./prisma/

# Generate prisma client
RUN npm run prisma:generate

# Copy source code
COPY src ./src
COPY tsconfig.json .

# Expose port
EXPOSE 3000

# Development: use ts-node with watch
CMD ["npm", "run", "dev"]
